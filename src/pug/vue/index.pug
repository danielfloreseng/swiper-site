        <!-- Main Swiper -> pass thumbs swiper instance -->
        <swiper :thumbs="{ swiper: thumbsSwiper }" ...>
          ...
        </swiper>

        <!-- Thumbs Swiper -> store swiper instance -->
        <swiper @swiper="setThumbsSwiper" ...>
          ...
        </swiper>
